<div class="editor-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-xs-12">
        <ul class="error-messages">
          <li>That title is required</li>
        </ul>



        <%= form_with(model: @article) do |f| %>
          <fieldset>
            <fieldset class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control form-control-lg" , placeholder: "Article Title" %>
            </fieldset>
            <fieldset class="form-group">
            <%= f.label :about %>
            <%= f.text_field :about , class: "form-control" , placeholder: "What's this article about?" %>
            </fieldset>
            <fieldset class="form-group">
            <%= f.label :article %>
            <%= f.text_area :article , class: "form-control" , rows: "8" , placeholder: "Write your article (in markdown)" %>
            </fieldset>
            <fieldset class="form-group">
            <%= f.label :tag %>
            <%= f.text_field :tag , class: "form-control" , placeholder: "Enter tags" %>
              <div class="tag-list">
                <span class="tag-default tag-pill"> <i class="ion-close-round"></i> tag </span>
              </div>
            </fieldset>
            <%= f.submit "Publish Article", class: "btn btn-lg pull-xs-right btn-primary" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
